      /! Form to add match data
      #gameData.modal.fade aria-hidden="true" aria-labelledby="myLargeModalLabel" role="dialog" tabindex="-1"
        .modal-dialog
          .modal-content
            .modal-header
              button.close aria-label="Close" data-dismiss="modal" type="button"
                span aria-hidden="true" &times;
                h4#myModalLabel.modal-title Enter match details
              form
              .modal-body
                .row
                  .form-group.clearfix
                .col-md-12
                  label for="inlineRadio1"  Did you play in this game?
                  div
                    label.radio-inline for="inlineRadio1"
                      input#inlineRadio1 name="serviceType" type="radio" value="yes" /
                      | Yes
                    label.radio-inline for="inlineRadio2"
                      input#inlineRadio2 name="serviceType" type="radio" value="no" /
                      | No

                .row
                  .form-group.clearfix
                    .col-md-4.col-sm-4.col-xs-12
                      label for="numeric1"  Goals scored
                      input#numeric1.form-control type="number" min="0" step="1" placeholder="0" /
                    .col-md-4.col-sm-4.col-xs-12
                      label for="numeric2"  Penalty goals
                      input#numeric2.form-control type="number" min="0" step="1" placeholder="0" /
                    .col-md-4.col-sm-4.col-xs-12
                      label for="numeric3"  Assists
                      input#numeric3.form-control type="number" min="0" step="1" placeholder="0" /
            .row
              .form-group.clearfix
                .col-md-4.col-sm-6.col-xs-12
                  label for="yellowCards"  Yellow cards
                  input#yellowCards.form-control type="number" /
                .col-md-4.col-sm-6.col-xs-12
                  label for="redCards"  Red cards
                  input#redCards.form-control type="number" /
            .row
              .form-group.clearfix
                .col-md-6.col-sm-6
                  label for="optionsBoots"  What boots did you wear?
                    select#optionsBoots.form-control
                      option value="1"  Boot 1
                      option value="2"  Boot 2
                      option value="3"  Boot 3
              .modal-footer
                button.btn.btn-default data-dismiss="modal" type="button"  Close
                button.btn.btn-primary type="submit"  Save changes





